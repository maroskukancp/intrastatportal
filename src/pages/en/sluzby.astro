---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/translations';
import CTA from '../../components/CTA.astro';

const t = useTranslations('en');
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const services = [
  {
    title: t('services.processing.title'),
    description: t('services.processing.desc'),
    details: [
      'Processing of monthly INTRASTAT-SK reports',
      'Verification of data and codes accuracy',
      'Electronic submission to financial administration',
      'Archiving of all documents',
    ],
    icon: 'document',
    image: `${base}/images/service-processing.jpg`,
  },
  {
    title: t('services.consulting.title'),
    description: t('services.consulting.desc'),
    details: [
      'Assessment of reporting obligation',
      'Correct classification of goods according to combined nomenclature',
      'Optimization of data collection processes',
      'Resolution of specific cases',
    ],
    icon: 'chat',
  },
  {
    title: t('services.representation.title'),
    description: t('services.representation.desc'),
    details: [
      'Communication with Statistical Office of SR',
      'Communication with Financial Administration',
      'Handling reminders and requests',
      'Representation during inspections',
    ],
    icon: 'shield',
  },
  {
    title: t('services.training.title'),
    description: t('services.training.desc'),
    details: [
      'Intrastat basics',
      'Practical examples and exercises',
      'Training on financial administration portal',
      'Individual and group training',
    ],
    icon: 'academic',
  },
];
---

<Layout title={`${t('nav.services')} | Intrastat Portal`} description="Comprehensive Intrastat reporting services - processing, consulting, representation and training.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t('services.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('services.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Services Detail -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="space-y-16">
        {services.map((service, index) => (
          <div class={`flex flex-col lg:flex-row gap-8 lg:gap-12 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class="lg:w-1/2">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-14 h-14 bg-primary-600 rounded-xl flex items-center justify-center">
                  {service.icon === 'document' && (
                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                    </svg>
                  )}
                  {service.icon === 'chat' && (
                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                    </svg>
                  )}
                  {service.icon === 'shield' && (
                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                    </svg>
                  )}
                  {service.icon === 'academic' && (
                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                    </svg>
                  )}
                </div>
                <h2 class="text-2xl md:text-3xl font-bold text-slate-900">{service.title}</h2>
              </div>
              <p class="text-lg text-slate-600 mb-6">{service.description}</p>
              <ul class="space-y-3">
                {service.details.map((detail) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    <span class="text-slate-700">{detail}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="lg:w-1/2">
              {service.image ? (
                <img 
                  src={service.image} 
                  alt={service.title}
                  class="rounded-2xl h-64 lg:h-full min-h-[300px] w-full object-cover"
                  loading="lazy"
                />
              ) : (
                <div class="bg-slate-100 rounded-2xl h-64 lg:h-full min-h-[300px] flex items-center justify-center">
                  <div class="text-slate-400 text-center">
                    <svg class="w-16 h-16 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                    </svg>
                    <span class="text-sm">Illustration image</span>
                  </div>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTA />
</Layout>
