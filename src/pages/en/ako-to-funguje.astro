---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/translations';
import CTA from '../../components/CTA.astro';

const t = useTranslations('en');

const steps = [
  {
    number: '01',
    title: t('howItWorks.step1.title'),
    description: t('howItWorks.step1.desc'),
    details: 'Fill out the contact form on our website or call us. During the first conversation, we will determine your needs and answer all your questions about Intrastat obligations.',
  },
  {
    number: '02',
    title: t('howItWorks.step2.title'),
    description: t('howItWorks.step2.desc'),
    details: 'Based on information about your company and trade volume, we will prepare a customized quote. The price depends on the number of items and processing complexity.',
  },
  {
    number: '03',
    title: t('howItWorks.step3.title'),
    description: t('howItWorks.step3.desc'),
    details: 'Each month you send us invoices for purchase and sale of goods within the EU, or output from your accounting system. We accept various formats - Excel, PDF, or direct export from accounting.',
  },
  {
    number: '04',
    title: t('howItWorks.step4.title'),
    description: t('howItWorks.step4.desc'),
    details: 'We process your report, verify the accuracy of all data and submit it electronically to the financial administration. You receive confirmation of submission and a copy of the report for your records.',
  },
];

const documents = [
  'Invoices for goods purchased from EU',
  'Invoices for goods sold to EU',
  'Outputs from accounting system',
  'Delivery notes (if available)',
];
---

<Layout title={`${t('nav.howItWorks')} | Intrastat Portal`} description="Simple cooperation process in 4 steps. Learn how Intrastat report processing works.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t('howItWorks.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('howItWorks.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Steps -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        {steps.map((step, index) => (
          <div class="relative pb-12 last:pb-0">
            {index < steps.length - 1 && (
              <div class="absolute left-8 top-16 bottom-0 w-0.5 bg-primary-200" />
            )}
            
            <div class="flex gap-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center relative z-10">
                  <span class="text-2xl font-bold text-white">{step.number}</span>
                </div>
              </div>
              <div class="flex-grow pt-2">
                <h3 class="text-2xl font-bold text-slate-900 mb-2">{step.title}</h3>
                <p class="text-lg text-slate-600 mb-3">{step.description}</p>
                <p class="text-slate-500">{step.details}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Documents needed -->
  <section class="section-padding bg-slate-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl p-8 md:p-12 shadow-sm">
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-6">
            What documents do we need?
          </h2>
          <p class="text-lg text-slate-600 mb-8">
            To process an Intrastat report, we need the following documents:
          </p>
          <ul class="grid md:grid-cols-2 gap-4">
            {documents.map((doc) => (
              <li class="flex items-center gap-3 bg-slate-50 rounded-lg p-4">
                <svg class="w-6 h-6 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-slate-700 font-medium">{doc}</span>
              </li>
            ))}
          </ul>
          <div class="mt-8 p-4 bg-primary-50 rounded-lg border border-primary-100">
            <p class="text-primary-800">
              <strong>Tip:</strong> You can send us documents in any form - by email, via shared folder, or directly from your accounting system.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</Layout>
