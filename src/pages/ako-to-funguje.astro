---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/translations';
import CTA from '../components/CTA.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const prefix = lang === 'sk' ? '' : '/en';

const steps = [
  {
    number: '01',
    title: t('howItWorks.step1.title'),
    description: t('howItWorks.step1.desc'),
    details: 'Vyplňte kontaktný formulár na našej stránke alebo nám zavolajte. Počas prvého rozhovoru zistíme vaše potreby a zodpovieme všetky vaše otázky ohľadom Intrastat povinností.',
  },
  {
    number: '02',
    title: t('howItWorks.step2.title'),
    description: t('howItWorks.step2.desc'),
    details: 'Na základe informácií o vašej firme a objeme obchodov pripravíme cenovú ponuku na mieru. Cena závisí od počtu položiek a náročnosti spracovania.',
  },
  {
    number: '03',
    title: t('howItWorks.step3.title'),
    description: t('howItWorks.step3.desc'),
    details: 'Každý mesiac nám pošlete faktúry za nákup a predaj tovaru v rámci EÚ, prípadne výstup z vášho účtovného systému. Akceptujeme rôzne formáty - Excel, PDF, alebo priamy export z účtovníctva.',
  },
  {
    number: '04',
    title: t('howItWorks.step4.title'),
    description: t('howItWorks.step4.desc'),
    details: 'Spracujeme vaše hlásenie, skontrolujeme správnosť všetkých údajov a podáme ho elektronicky na finančnú správu. Vy dostanete potvrdenie o podaní a kópiu hlásenia pre vaše záznamy.',
  },
];

const documents = [
  'Faktúry za nákup tovaru z EÚ',
  'Faktúry za predaj tovaru do EÚ',
  'Výstupy z účtovného systému',
  'Dodacie listy (ak sú k dispozícii)',
];
---

<Layout title={`${t('nav.howItWorks')} | Intrastat Portál`} description="Jednoduchý proces spolupráce v 4 krokoch. Zistite, ako funguje spracovanie Intrastat hlásení.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t('howItWorks.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('howItWorks.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Steps -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        {steps.map((step, index) => (
          <div class="relative pb-12 last:pb-0">
            {/* Connector line */}
            {index < steps.length - 1 && (
              <div class="absolute left-8 top-16 bottom-0 w-0.5 bg-primary-200" />
            )}
            
            <div class="flex gap-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center relative z-10">
                  <span class="text-2xl font-bold text-white">{step.number}</span>
                </div>
              </div>
              <div class="flex-grow pt-2">
                <h3 class="text-2xl font-bold text-slate-900 mb-2">{step.title}</h3>
                <p class="text-lg text-slate-600 mb-3">{step.description}</p>
                <p class="text-slate-500">{step.details}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Documents needed -->
  <section class="section-padding bg-slate-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl p-8 md:p-12 shadow-sm">
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-6">
            Aké podklady potrebujeme?
          </h2>
          <p class="text-lg text-slate-600 mb-8">
            Pre spracovanie Intrastat hlásenia potrebujeme nasledovné dokumenty:
          </p>
          <ul class="grid md:grid-cols-2 gap-4">
            {documents.map((doc) => (
              <li class="flex items-center gap-3 bg-slate-50 rounded-lg p-4">
                <svg class="w-6 h-6 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-slate-700 font-medium">{doc}</span>
              </li>
            ))}
          </ul>
          <div class="mt-8 p-4 bg-primary-50 rounded-lg border border-primary-100">
            <p class="text-primary-800">
              <strong>Tip:</strong> Podklady nám môžete posielať v akejkoľvek forme - e-mailom, cez zdieľaný priečinok, alebo priamo z vášho účtovného systému.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</Layout>
