---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/translations';

const t = useTranslations('hu');
---

<Layout title={`${t('nav.contact')} | Intrastat Portál`} description="Lépjen kapcsolatba velünk kötelezettségmentes árajánlatért az Intrastat jelentéskészítési szolgáltatásokról.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t('contact.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('contact.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-slate-900 mb-6">Írjon nekünk</h2>
          <form 
            action="https://api.web3forms.com/submit" 
            method="POST"
            class="space-y-6"
            id="contact-form"
          >
            <input type="hidden" name="access_key" value="bd7ae047-f33e-4afb-accc-3d7bcc129b01" />
            <input type="hidden" name="subject" value="Új üzenet az Intrastat Portálról" />
            <input type="hidden" name="from_name" value="Intrastat Portál" />
            <input type="checkbox" name="botcheck" class="hidden" />
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                  {t('contact.form.name')} *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="Kovács János"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                  {t('contact.form.email')} *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="janos@ceg.hu"
                />
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">
                  {t('contact.form.phone')}
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="+421 XXX XXX XXX"
                />
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-slate-700 mb-2">
                  {t('contact.form.company')}
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="Az Ön cégének neve"
                />
              </div>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                {t('contact.form.message')} *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
                placeholder="Írja le helyzetét vagy kérdését..."
              ></textarea>
            </div>
            
            <button type="submit" class="btn-primary w-full md:w-auto">
              {t('contact.form.submit')}
            </button>
          </form>
          
          <div id="success-message" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-green-800 font-medium">{t('contact.form.success')}</span>
            </div>
          </div>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-slate-900 mb-6">{t('contact.info.title')}</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-slate-900 mb-2">Cégadatok</h3>
                <p class="text-slate-600 leading-relaxed">Karol Virág - KIMM</p>
                <p class="text-slate-600 leading-relaxed">IČO: 40883264</p>
                <p class="text-slate-600 leading-relaxed">DIČ: 1027955060</p>
                <p class="text-slate-600 leading-relaxed mt-2">Ružová dolina 3</p>
                <p class="text-slate-600 leading-relaxed">940 56 Nové Zámky</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900">{t('contact.info.phone')}</h3>
                <a href="tel:+421915730066" class="text-primary-600 hover:text-primary-700">
                  +421 915 730 066
                </a>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900">{t('contact.info.hours')}</h3>
                <p class="text-slate-600">{t('contact.info.hoursValue')}</p>
              </div>
            </div>
          </div>
          
          <div class="mt-8 p-6 bg-slate-50 rounded-xl">
            <h3 class="font-semibold text-slate-900 mb-3">Gyors válasz</h3>
            <p class="text-slate-600 text-sm">
              Minden üzenetre 24 órán belül válaszolunk munkanapokon. Sürgős ügyekben kérjük, hívjon telefonon.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Maps Section -->
  <section class="py-12 bg-slate-50">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-3">Hol talál minket</h2>
          <p class="text-slate-600">Ružová dolina 3, 940 56 Nové Zámky</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm overflow-hidden border border-slate-200">
          <div class="aspect-[16/9] md:aspect-[21/9]">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2670.908116616957!2d18.155919877030993!3d47.97683477122619!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x476b06b5163d3bd9%3A0xd5901ff7de45edfb!2zOTQwIDU2LCBSdcW-b3bDoSBkb2xpbmEgNDE0MS8zLCA5NDAgMDIgTm92w6kgWsOhbWt5!5e0!3m2!1sen!2ssk!4v1766407036312!5m2!1sen!2ssk"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Iroda helyszín térkép"
            ></iframe>
          </div>
          <div class="p-4 bg-slate-50 border-t border-slate-200">
            <a 
              href="https://www.google.com/maps/dir/?api=1&destination=Ružová+dolina+3,+940+56+Nové+Zámky,+Slovakia"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium transition-colors"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
              Navigáció megnyitása a Google Térképen
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    
    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
      });
      
      if (response.ok) {
        form.reset();
        successMessage?.classList.remove('hidden');
        setTimeout(() => {
          successMessage?.classList.add('hidden');
        }, 5000);
      }
    } catch (error) {
      console.error('Error submitting form:', error);
    }
  });
</script>
