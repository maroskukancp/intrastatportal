---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/translations';
import CTA from '../../components/CTA.astro';

const t = useTranslations('hu');

const stats = [
  { value: '100+', label: t('about.stats.clients') },
  { value: '1000+', label: t('about.stats.reports') },
  { value: '10+', label: t('about.stats.years') },
];

const values = [
  {
    title: 'Professzionalizmus',
    description: 'Minden ügyfélhez szakszerűen és felelősségteljesen közelítünk.',
    icon: 'star',
  },
  {
    title: 'Megbízhatóság',
    description: 'Betartjuk a határidőket és garantáljuk szolgáltatásaink minőségét.',
    icon: 'shield',
  },
  {
    title: 'Átláthatóság',
    description: 'Világos kommunikáció és átlátható árazás rejtett díjak nélkül.',
    icon: 'eye',
  },
];
---

<Layout title={`${t('nav.about')} | Intrastat Portál`} description="Intrastat jelentéskészítésre specializálódott szakértői csapat vagyunk. Segítünk a szlovák cégeknek a vám- és statisztikai ügyekben.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t('about.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('about.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- About Content -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-slate-900 mb-6">Kik vagyunk</h2>
        <p class="text-lg text-slate-600 mb-4">
          {t('about.text1')}
        </p>
        <p class="text-lg text-slate-600 mb-6">
          {t('about.text2')}
        </p>
        <p class="text-lg text-slate-600">
          Szolgáltatásainkat kis- és nagyvállalatok egyaránt igénybe veszik különböző iparágakból - gyártó cégektől kereskedelmi vállalatokig és logisztikai cégekig.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="bg-primary-600 py-16">
    <div class="container-custom">
      <div class="grid grid-cols-3 gap-8 text-center">
        {stats.map((stat) => (
          <div>
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">{stat.value}</div>
            <div class="text-primary-200">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="section-padding bg-slate-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">Értékeink</h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Ezek az elvek vezetnek minket a mindennapi munkánkban ügyfeleinkkel.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {values.map((value) => (
          <div class="bg-white rounded-xl p-8 text-center shadow-sm">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              {value.icon === 'star' && (
                <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
              )}
              {value.icon === 'shield' && (
                <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
              {value.icon === 'eye' && (
                <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-2">{value.title}</h3>
            <p class="text-slate-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTA />
</Layout>
