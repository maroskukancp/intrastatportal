---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/translations';
import CTA from '../../components/CTA.astro';

const t = useTranslations('hu');

const included = [
  t('pricing.item1'),
  t('pricing.item2'),
  t('pricing.item3'),
  t('pricing.item4'),
  t('pricing.item5'),
];

const factors = [
  {
    title: 'Tételek száma',
    description: 'Feldolgozandó számlák és tételek havi száma',
  },
  {
    title: 'Jelentés típusa',
    description: 'Beérkezések, feladások, vagy mindkét irány',
  },
  {
    title: 'Bonyolultság',
    description: 'Áruk összetettsége és besorolási igények',
  },
  {
    title: 'Gyakoriság',
    description: 'Havi együttműködés vs. egyszeri jelentés',
  },
];
---

<Layout title={`${t('nav.pricing')} | Intrastat Portál`} description="Átlátható Intrastat jelentésfeldolgozási árak. Kérjen tőlünk kötelezettségmentes árajánlatot.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t('pricing.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('pricing.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Info -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="bg-primary-600 p-8 text-center">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">
              Egyedi árajánlat
            </h2>
            <p class="text-primary-100">
              Az ár az Ön igényeihez igazodik
            </p>
          </div>
          
          <div class="p-8 md:p-12">
            <p class="text-lg text-slate-600 mb-8 text-center">
              {t('pricing.text')}
            </p>
            
            <div class="mb-10">
              <h3 class="text-xl font-semibold text-slate-900 mb-4">{t('pricing.includes')}</h3>
              <ul class="space-y-3">
                {included.map((item) => (
                  <li class="flex items-center gap-3">
                    <svg class="w-5 h-5 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    <span class="text-slate-700">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="text-center">
              <a href="/hu/kontakt" class="btn-primary text-lg py-4 px-8">
                {t('pricing.cta')}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Factors -->
  <section class="section-padding bg-slate-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-8 text-center">
          Mi befolyásolja az árat?
        </h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          {factors.map((factor) => (
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-slate-900 mb-2">{factor.title}</h3>
              <p class="text-slate-600">{factor.description}</p>
            </div>
          ))}
        </div>
        
        <div class="mt-10 p-6 bg-accent-500/10 rounded-xl border border-accent-500/20">
          <div class="flex items-start gap-4">
            <svg class="w-8 h-8 text-accent-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-1">Első konzultáció ingyenes</h3>
              <p class="text-slate-600">
                Lépjen kapcsolatba velünk és kötelezettség nélkül megbeszéljük igényeit. Az információk alapján személyre szabott árajánlatot készítünk.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</Layout>
