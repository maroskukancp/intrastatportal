---
import { getLangFromUrl, useTranslations, languages } from '../i18n/translations';
import LanguageSwitcher from './LanguageSwitcher.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const prefix = lang === 'sk' ? '' : '/en';

const navigation = [
  { name: t('nav.home'), href: `${base}${prefix}/` },
  { name: t('nav.services'), href: `${base}${prefix}/sluzby` },
  { name: t('nav.about'), href: `${base}${prefix}/o-nas` },
  { name: t('nav.howItWorks'), href: `${base}${prefix}/ako-to-funguje` },
  { name: t('nav.pricing'), href: `${base}${prefix}/cennik` },
  { name: t('nav.faq'), href: `${base}${prefix}/faq` },
  { name: t('nav.blog'), href: `${base}${prefix}/blog` },
  { name: t('nav.contact'), href: `${base}${prefix}/kontakt` },
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href={`${base}${prefix}/`} class="flex items-center space-x-2">
        <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-xl">IP</span>
        </div>
        <span class="text-xl font-bold text-slate-800 hidden sm:block">Intrastat Port√°l</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-6">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors"
          >
            {item.name}
          </a>
        ))}
      </div>
      
      <!-- Right side: Language + CTA -->
      <div class="hidden lg:flex items-center space-x-4">
        <LanguageSwitcher />
        <a href={`${base}${prefix}/kontakt`} class="btn-primary text-sm py-2 px-4">
          {t('hero.cta')}
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button
        type="button"
        class="lg:hidden p-2 rounded-md text-slate-600 hover:text-slate-900 hover:bg-slate-100"
        id="mobile-menu-button"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="sr-only">Open menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 border-t">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-2 text-base font-medium text-slate-600 hover:text-primary-600 hover:bg-slate-50 rounded-md"
          >
            {item.name}
          </a>
        ))}
        <div class="px-3 py-2">
          <LanguageSwitcher />
        </div>
        <div class="px-3 py-2">
          <a href={`${base}${prefix}/kontakt`} class="btn-primary w-full text-center text-sm py-2">
            {t('hero.cta')}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    const expanded = button.getAttribute('aria-expanded') === 'true';
    button.setAttribute('aria-expanded', (!expanded).toString());
    menu?.classList.toggle('hidden');
  });
</script>
