---
import { languages, getLangFromUrl, getRouteFromUrl } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const route = getRouteFromUrl(Astro.url);

function getLocalizedPath(targetLang: string) {
  if (targetLang === 'sk') {
    return route || '/';
  }
  return `/en${route === '/' ? '' : route}`;
}
---

<div class="relative inline-block text-left">
  <button
    type="button"
    class="inline-flex items-center justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 border border-slate-200"
    id="language-menu-button"
    aria-expanded="false"
    aria-haspopup="true"
  >
    <span class="uppercase">{lang}</span>
    <svg class="h-4 w-4 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
    </svg>
  </button>
  
  <div
    class="absolute right-0 z-10 mt-2 w-32 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
    id="language-menu"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="language-menu-button"
  >
    <div class="py-1" role="none">
      {Object.entries(languages).map(([code, name]) => (
        <a
          href={getLocalizedPath(code)}
          class={`block px-4 py-2 text-sm ${lang === code ? 'bg-slate-100 text-primary-600 font-medium' : 'text-slate-700 hover:bg-slate-50'}`}
          role="menuitem"
        >
          {name}
        </a>
      ))}
    </div>
  </div>
</div>

<script>
  const button = document.getElementById('language-menu-button');
  const menu = document.getElementById('language-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  
  document.addEventListener('click', (e) => {
    if (!button?.contains(e.target as Node) && !menu?.contains(e.target as Node)) {
      menu?.classList.add('hidden');
    }
  });
</script>
